.courseIndex
	header#banner.hero-unit
		.container
			h1.lead Library
	br
	.container-fluid 
		.row

			//- Left Side
			.col-md-2
				portal-sidebar

			//- Right Side
			.col-md-8

				.row
					.col-md-12

						//- if no Courses
						.alert.alert-warning.text-center(ng-if='vm.courses.length==0', role='alert')
							p No Courses Found !
							p
								a.btn.btn-success.btn-sm(type='button', ng-href='/library/courses/create') Create

						//- if Courses
						.panel.panel-default(ng-if='vm.courses.length!==0')
							.panel-body

								.row
									.col-md-4(ng-repeat='course in vm.courses')

											.panel.panel-default
												.panel-body
													a(role='button', ng-href='/library/courses/show/{{course._id}}') {{course.title}}
												.panel-body
													p {{course.description}}
													p.text-muted by {{course.user.name}}
													p.text-muted {{course.createdAt|date:'mediumDate'}}
												.panel-body.text-center
													a.btn.btn-primary(role='button', ng-href='/library/courses/show/{{course._id}}') Show

			//- Right Side
			.col-md-2

				.panel.panel-default.text-center
					.panel-body
						p.lead New Course
						a.btn.btn-success(type='button', ng-href='/library/courses/create') Create
