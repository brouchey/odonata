.courseShow
	header#banner.hero-unit
		.container
			h1.lead {{vm.course.title}}
	br
	.container-fluid 
		.row

			//- Left Side
			.col-md-2
				portal-sidebar

			//- Right Side
			.col-md-8

				.row
					.col-md-12

						.panel.panel-default
							.panel-heading
								p {{vm.course.title}}
								p
									.question-tags
										span(ng-repeat='tag in vm.course.tags')
											span.label.label-info {{tag.text}}
											span &nbsp;
							.panel-body {{vm.course.description}}
							.panel-body
								p.text-muted by {{vm.course.user.name}}
								p.text-muted {{vm.course.createdAt|date:'mediumDate'}}
							.panel-body {{vm.course.content}}

			//- Right Side
			.col-md-2

				.panel.panel-default.text-center
					.panel-body Some Content
