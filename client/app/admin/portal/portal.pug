header#banner.hero-unit
	.container
		h1.lead Admin Portal
br
.container-fluid
	.row

		//- Left Side
		.col-lg-2
			.list-group
				.list-group-item.text-center.profile-photo
					i.fa.fa-user-circle-o.text-muted(ng-hide='admin.hasAvatar()')
					img.img-circle(ng-show='admin.hasAvatar()', ng-src='assets/uploads/avatars/{{admin.getCurrentUser().avatar}}', alt='Avatar')
					//- p
					//- 	button.btn.btn-info.btn-xs(type='button') Change Photo
					p
						strong {{admin.getCurrentUser().name}}
					span.text-muted {{admin.getCurrentUser().email}}
				a.list-group-item.active(href='#')
					i.fa.fa-tachometer.fa-lg(aria-hidden='true')
					|  &nbsp; Overview
				a.list-group-item(href='/admin/feed')
					i.fa.fa-feed.fa-lg(aria-hidden='true')
					|  &nbsp; Feed
				a.list-group-item(href='/admin/users')
					i.fa.fa-users.fa-lg(aria-hidden='true')
					|  &nbsp; Users
				a.list-group-item(href='#')
					i.fa.fa-line-chart.fa-lg(aria-hidden='true')
					|  &nbsp; Traffic
				a.list-group-item(href='#')
					i.fa.fa-money.fa-lg(aria-hidden='true')
					|  &nbsp; Revenue
				a.list-group-item(href='#')
					i.fa.fa-area-chart.fa-lg(aria-hidden='true')
					|  &nbsp; Stats
				a.list-group-item(href='/admin/logs')
					i.fa.fa-database.fa-lg(aria-hidden='true')
					|  &nbsp; Logs

		//- Middle 
		.col-lg-6

			.panel.panel-default
				.panel-heading Users ({{admin.users.length}})
				ul.list-group
					li.list-group-item(ng-repeat='user in admin.users')
						i.fa.fa-user-circle-o.fa-lg.text-muted(ng-hide='admin.userHasAvatar(user)')
						img.img-circle.user-avatar(ng-show='admin.userHasAvatar(user)', ng-src='assets/uploads/avatars/{{user.avatar}}', alt='Avatar')
						span &nbsp; {{user.name}} ({{user._id}})
						span.text-muted.pull-right {{user.email}}

