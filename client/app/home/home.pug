          h2.lead Login
          form.form(name='form', ng-submit='$ctrl.login(form)', novalidate='')
            .form-group
              label Email
              input.form-control(type='email', name='email', ng-model='$ctrl.user.email')
            .form-group
              label Password
              input.form-control(type='password', name='password', ng-model='$ctrl.user.password')

