.quizbox
  header#banner.hero-unit
    .container
      h1.lead Quizbox
  br
  .container-fluid 
    .row

      //- Left Side
      .col-md-2
        portal-sidebar

      //- Right Side
      .col-md-8

        .row
          .col-md-12

            //- if no Quizzes
            .alert.alert-warning.text-center(ng-if='vm.quizzes.length==0', role='alert')
              p No Quizzes Found !
              p
                a.btn.btn-success.btn-sm(type='button', ng-href='/quiz/create') Create

            //- if Quizzes
            .panel.panel-default(ng-if='vm.quizzes.length!==0')
              .panel-body

                .row
                  .col-md-4(ng-repeat='quiz in vm.quizzes')

                      .panel.panel-default
                        .panel-body
                          a(role='button', ng-href='/quiz/show/{{quiz._id}}') {{quiz.title}}
                        .panel-body
                          p {{quiz.description}}
                          p.text-muted by {{quiz.user.name}}
                          p.text-muted {{quiz.createdAt|date:'mediumDate'}}
                        .panel-body.text-center
                          a.btn.btn-primary(role='button', ng-href='/quiz/show/{{quiz._id}}') Show

      //- Right Side
      .col-md-2

        .panel.panel-default.text-center
          .panel-body
            p.lead New Quiz ?
            a.btn.btn-success(type='button', ng-href='/quiz/create') Create
