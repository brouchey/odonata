					i.fa.fa-user-secret.fa-lg(aria-hidden='true')
					|  &nbsp; Privacy
				a.list-group-item(href='#')
					i.fa.fa-bell-o.fa-lg(aria-hidden='true')
					|  &nbsp; Notifications
				a.list-group-item(href='#')
					i.fa.fa-cog.fa-lg(aria-hidden='true')
					|  &nbsp; Preferences
				a.list-group-item(href='#')
					i.fa.fa-exchange.fa-lg(aria-hidden='true')
					|  &nbsp; API
				a.list-group-item.list-group-item-danger(href='#')
					i.fa.fa-ban.fa-lg(aria-hidden='true')
					|  &nbsp; Danger Zone

