header#banner.hero-unit
	.container
		h1.lead Profile
br
.container-fluid
	.row

		//- Left Side
		.col-md-2
			.list-group
				.list-group-item.text-center.profile-photo
					i.fa.fa-user-circle-o.fa-lg
					p {{vm.getCurrentUser().name}}
					p {{vm.getCurrentUser().email}}
