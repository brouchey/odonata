.container
  div
    div
      h1.lead {{vm.quiz.title}}
  hr
  |  {{vm.quiz.description}}
hr
.container
  .intro(ng-show='!vm.inProgress')  
    button.btn.btn-success(type='button', ng-click='vm.startQuiz()') Start the Quiz !
  .quiz-area(ng-show='vm.inProgress')
    div(ng-show='!vm.quizOver')
      h2 Question {{vm.question}}
      ul
        li(ng-repeat='option in vm.options')
          label
            input(type='radio', ng-model='vm.selectedOption', name='answer', value='{{option.text}}')
            | {{option.text}}
      |  
      button(ng-click='vm.checkAnswer()', ng-show='vm.answerMode') Submit
      div(ng-show='!vm.answerMode')
        button.next-question(ng-click='vm.nextQuestion()') Next
        |  
        span(ng-show='vm.correctAns') That is correct!
        |  
        span(ng-show='!vm.correctAns') Sorry, that is an incorrect answer.
    div(ng-show='vm.quizOver')
      h2 Quiz is over !
      |  
      button(ng-click='vm.resetQuiz()') Play again
    //- #score  Score: {{vm.score}}

