header#banner.hero-unit
  .container
    h1.lead New Quizz
    h2.lead {{vm.quiz.title}}
br
.container
  form(name='quizForm', ng-submit='vm.submitQuiz()')

    .well
      h2.lead Quiz Title
      input.form-control(type='text', ng-model='vm.quiz.title', placeholder='Title', ng-required='true')

    .well
      h2.lead Quiz Description
      input.form-control(type='text', ng-model='vm.quiz.description', placeholder='Description', ng-required='true')

    .well(ng-repeat='question in vm.quiz.questions track by $index')
      h2.lead Setup Question {{$index+1}}
      input.form-control(type='text', ng-model='question.content', placeholder='New Question', ng-required='true')
      br

      .well {{question.content}}
      br
      button.btn.btn-success(type='button', ng-click='vm.splitQuestion(question)') Split
      br
      .well {{vm.splitedQuestion|json}}
      br
      .well
        select
          option(ng-repeat='words in vm.splitedQuestion track by $index') {{vm.splitedQuestion[$index]}}
      br

      button.btn.btn-danger(type='button', ng-click='vm.removeQuestion($index)') Remove Question
      hr

      .row
        .col-md-8
          .panel.panel-info
            .panel-heading Question {{$index+1}} Answers
            .panel-body
              .form-inline(ng-repeat='option in question.options track by $index')
                .input-group
                  span.input-group-addon {{$index+1}}
                  input.form-control(type='text', ng-model='option.text', placeholder='New Answer', required)
                button.btn.btn-danger(type='button', ng-click='vm.removeOption(question, $index)')
                    span.glyphicon.glyphicon-minus
              br
              button.btn.btn-success(type='button', ng-click='vm.addOption(question)') Add Answer
        .col-md-4
          .panel.panel-success
            .panel-heading Good Answer
            .panel-body
              .radio(ng-repeat='option in question.options track by $index')
                label
                  input(type='radio', name='option', ng-model='question.answer', value='{{option.text}}', ng-required='true')
                  | {{option.text}}

    button.btn.btn-success(type='button', ng-click='vm.addQuestion()') Add New Question
    hr

    .well
      p FINAL Quiz Object :
      pre {{vm.quiz|json}}

    input.btn.btn-primary(type='submit', ng-disabled='quizForm.$invalid', value='Create')
    hr
