.admin-sidebar
	.list-group
		.list-group-item.text-center.profile-photo
			i.fa.fa-user-circle-o.text-muted(ng-hide='vm.hasAvatar()')
			img.img-circle(ng-show='vm.hasAvatar()', ng-src='assets/uploads/avatars/{{vm.getCurrentUser().avatar}}', alt='Avatar')
			p
				strong {{vm.getCurrentUser().name}}
			p.text-muted {{vm.getCurrentUser().email}}
		a.list-group-item(href='/admin', ng-class='{active: vm.isActive("/admin")}')
			i.fa.fa-tachometer.fa-lg(aria-hidden='true')
			|  &nbsp; Overview
